<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".modules.query.QueryWriteActivty">

    <androidx.appcompat.widget.Toolbar android:gravity="start"
        android:id="@+id/toolbarToolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:contentInsetStart="0dp" style="@style/groupStyle">
        <LinearLayout android:gravity="start"
            android:id="@+id/linearRowarrowright"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_15pxv"
            android:layout_marginEnd="@dimen/_28pxh"
            android:layout_marginStart="@dimen/_15pxh"
            android:layout_marginTop="@dimen/_30pxv"
            android:layout_width="match_parent" android:orientation="horizontal">
            <ImageButton
                android:background="@drawable/rectangle_bg_white_a700_radius_15"
                android:id="@+id/btnArrowright"
                android:layout_height="@dimen/_30pxh"
                android:layout_width="@dimen/_30pxh"
                android:paddingHorizontal="@dimen/_7pxh"
                android:paddingVertical="@dimen/_7pxv"
                android:scaleType="fitCenter"
                android:src="@drawable/img_arrowright_gray_900" tools:ignore="ContentDescription"/>
            <TextView android:ellipsize="end"
                android:id="@+id/txtAboutUs"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_3pxv"
                android:layout_marginStart="@dimen/_19pxh"
                android:layout_marginTop="@dimen/_2pxv"
                android:layout_weight="0.73"
                android:layout_width="0dp" android:singleLine="true"
                android:text="Write your Query"
                style="@style/txtRobotoromansemibold20"
                tools:text="Write your Query"/>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <TextView
        android:layout_marginStart="@dimen/_15pxh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Write your Query"
        style="@style/txtNunitomedium161"
        android:layout_marginTop="16dp"
        android:textStyle="bold"/>

    <EditText
        android:layout_marginStart="@dimen/_15pxh"
        android:layout_marginEnd="@dimen/_15pxh"
        android:id="@+id/etQuery"
        android:hint="Enter your query here"
        android:textColorHint="@color/white"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="16dp"
        style="@style/txtRalewayromansemibold16_33"
        android:layout_marginTop="8dp"
        android:gravity="top"
        />

        </LinearLayout>
        </ScrollView>

        <ProgressBar
            android:id="@+id/progressBar"
            android:visibility="gone"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Submit"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
       style="@style/btnGradient_1"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginTop="16dp"/>

    </LinearLayout>

</LinearLayout>