<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".modules.query.QueryAnswerActivity">


    <androidx.appcompat.widget.Toolbar android:gravity="start"
        android:id="@+id/toolbarToolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:contentInsetStart="0dp" style="@style/groupStyle">
        <LinearLayout android:gravity="start"
            android:id="@+id/linearRowarrowright"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_15pxv"
            android:layout_marginEnd="@dimen/_28pxh"
            android:layout_marginStart="@dimen/_15pxh"
            android:layout_marginTop="@dimen/_30pxv"
            android:layout_width="match_parent" android:orientation="horizontal">
            <ImageButton
                android:background="@drawable/rectangle_bg_white_a700_radius_15"
                android:id="@+id/btnArrowright"
                android:layout_height="@dimen/_30pxh"
                android:layout_width="@dimen/_30pxh"
                android:paddingHorizontal="@dimen/_7pxh"
                android:paddingVertical="@dimen/_7pxv"
                android:scaleType="fitCenter"
                android:src="@drawable/img_arrowright_gray_900" tools:ignore="ContentDescription"/>
            <TextView android:ellipsize="end"
                android:id="@+id/txtAboutUs"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_3pxv"
                android:layout_marginStart="@dimen/_19pxh"
                android:layout_marginTop="@dimen/_2pxv"
                android:layout_weight="0.73"
                android:layout_width="0dp" android:singleLine="true"
                android:text="Solved Query"
                style="@style/txtRobotoromansemibold20"
                tools:text="Solved Query"/>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:orientation="vertical"
        android:layout_marginStart="@dimen/_15pxh"
        android:layout_marginEnd="@dimen/_15pxh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginTop="35dp"
            style="@style/txtNunitomedium161"
            android:text="Your Query"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>



        <TextView
            android:id="@+id/question"
            android:layout_marginTop="10dp"
            style="@style/txtNunitomedium16"
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        
        <TextView
            android:layout_marginTop="60dp"
            style="@style/txtNunitomedium161"
            android:text="Reply From our Team"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="17dp"
            android:background="@drawable/query_background"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvQueryText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                style="@style/txtRalewayromanregular14_2"
                android:padding="16dp"
                android:layout_marginBottom="8dp" />


        </LinearLayout>



    </LinearLayout>




</LinearLayout>