<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="welcomeLoginVM" type="com.fitness.app.modules.welcomelogin.data.viewmodel.WelcomeLoginVM"/>
    </data>
    <LinearLayout android:id="@+id/frameWelcomeLogin"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        style="@style/groupStylewhite_A700">


        <ScrollView
            android:id="@+id/scrollview"
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/linearColumnlogo"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:layout_marginTop="20dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:src="@drawable/logo"
                android:layout_width="wrap_content"
                android:layout_height="100dp"/>

            <com.asksira.loopingviewpager.LoopingViewPager
                android:gravity="end"
                android:id="@+id/imageSliderSliderrectangle451"
                android:layout_height="@dimen/_302pxv"
                android:layout_marginStart="@dimen/_10pxh"
                android:layout_marginEnd="@dimen/_10pxh"
                android:layout_marginTop="@dimen/_22pxv"
                android:layout_width="match_parent"
                app:autoScroll="true" app:isInfinite="true"
                app:scrollInterval="5000" style="@style/groupStylecornerRadius_2"/>

            <com.asksira.loopingviewpager.indicator.CustomShapePagerIndicator
                android:id="@+id/indicatorSettings"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10pxh"
                android:layout_marginStart="@dimen/_10pxh"
                android:layout_marginTop="@dimen/_23pxv"
                android:layout_width="wrap_content"
                app:drawable_normal="@drawable/indicator_unselected_bg_gray_300_9e_radius_8"
                app:drawable_selected="@drawable/indicator_selected_bg_gray_700_radius_8"
                app:indicator_size="@dimen/_8pxh" app:indicator_spacing="@dimen/_4pxh"/>
            <TextView android:ellipsize="end"
                android:gravity="start"
                android:id="@+id/txtStartYourFitn"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_50pxh"
                android:layout_marginStart="@dimen/_50pxh"
                android:layout_marginTop="@dimen/_44pxv"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:text="@{welcomeLoginVM.welcomeLoginModel.txtStartYourFitn}"
                style="@style/txtRalewayromanmedium12"
                tools:text="@string/msg_start_your_fitn"/>
            <FrameLayout
                android:id="@+id/frameStackeye"
                android:layout_height="@dimen/_46pxv"
                android:layout_marginEnd="@dimen/_15pxh"
                android:layout_marginStart="@dimen/_15pxh"
                android:layout_marginTop="@dimen/_19pxv"
                android:layout_width="match_parent"
                style="@style/groupStylecornerRadius_3">

                <LinearLayout
                    android:id="@+id/linearRoweye"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_5pxh"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageEye"
                        android:layout_height="@dimen/_13pxh"
                        android:layout_marginBottom="@dimen/_1pxv"
                        android:layout_marginTop="@dimen/_2pxv"
                        android:layout_width="@dimen/_13pxh"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_eye"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_eye"/>

                    <TextView
                        android:ellipsize="end"
                        android:id="@+id/txtNinetyOne"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_4pxh"
                        android:layout_marginTop="@dimen/_1pxv"
                        android:layout_weight="0.24"
                        android:layout_width="0dp"
                        android:singleLine="true"
                        android:text="@{welcomeLoginVM.welcomeLoginModel.txtNinetyOne}"
                        style="@style/txtRobotoromanregular12_1"
                        tools:text="@string/lbl_91"/>

                    <EditText
                        android:ellipsize="end"
                        android:hint="@string/msg_enter_your_numb"
                        android:id="@+id/txtEnterYourNumb"
                        android:textColorHint="@color/gray_800"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_28pxh"
                        android:layout_width="match_parent"
                        android:singleLine="true"
                        android:backgroundTint="@color/gray_400"
                        style="@style/txtRalewayromanregular12" />
                </LinearLayout>


                <ImageButton
                    android:layout_gravity="end"
                    android:background="@drawable/rectangle_bg_gray_300_radius_10"
                    android:id="@+id/btnArrowright"
                    android:layout_height="@dimen/_30pxh"
                    android:layout_marginEnd="@dimen/_8pxh"
                    android:layout_width="@dimen/_35pxh"
                    android:paddingHorizontal="@dimen/_10pxh"
                    android:paddingVertical="@dimen/_10pxv"
                    android:layout_marginTop="2dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/img_arrowright"
                    tools:ignore="ContentDescription"/>

            </FrameLayout>


            <ProgressBar
                android:id="@+id/progressbar"
                android:visibility="gone"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView android:ellipsize="end"
                android:gravity="center_horizontal"
                android:id="@+id/txtOTPwillbesen"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10pxh"
                android:layout_marginStart="@dimen/_10pxh"
                android:layout_marginTop="@dimen/_15pxv"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:text="@{welcomeLoginVM.welcomeLoginModel.txtOTPwillbesen}"
                style="@style/txtRalewayromanmedium10" tools:text="@string/msg_otp_will_be_sen"/>
            <LinearLayout android:id="@+id/linearRowlinetwentynine"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_42pxv"
                android:layout_width="wrap_content" android:orientation="horizontal">
                <View android:background="@color/black_900_75"
                    android:id="@+id/lineLineTwentyNine"
                    android:layout_height="@dimen/_1pxv"
                    android:layout_marginBottom="@dimen/_6pxv"
                    android:layout_marginTop="@dimen/_7pxv"
                    android:layout_weight="0.47" android:layout_width="0dp"/>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtOR"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15pxh"
                    android:layout_weight="0.05"
                    android:layout_width="0dp"
                    android:singleLine="true"
                    android:text="@{welcomeLoginVM.welcomeLoginModel.txtOR}"
                    style="@style/txtRalewayromanmedium12_1" tools:text="@string/lbl_or"/>
                <View android:background="@color/black_900_75"
                    android:id="@+id/lineLineThirty"
                    android:layout_height="@dimen/_1pxv"
                    android:layout_marginBottom="@dimen/_6pxv"
                    android:layout_marginStart="@dimen/_15pxh"
                    android:layout_marginTop="@dimen/_7pxv"
                    android:layout_weight="0.47" android:layout_width="0dp"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_horizontal"
                android:id="@+id/linearRowconfirmation"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10pxh"
                android:layout_marginStart="@dimen/_10pxh"
                android:layout_marginTop="@dimen/_39pxv"
                android:layout_width="match_parent"
                android:orientation="horizontal">
                <TextView android:ellipsize="end"
                    android:id="@+id/txtConfirmation"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_1pxv"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:text="@string/msg_already_have_an1"
                    style="@style/txtRalewayromanmedium14"
                    tools:text="@string/msg_already_have_an1"/>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtLogin"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_1pxv"
                    android:layout_marginStart="@dimen/_11pxh"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:text="@string/lbl_login1"
                    style="@style/txtRalewayromanbold14"
                    textUnderline="true"
                    tools:text="@string/lbl_login1"/>
            </LinearLayout>
        </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>
