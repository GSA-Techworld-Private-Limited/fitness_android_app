<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".modules.query.QueryActivity">


    <androidx.appcompat.widget.Toolbar android:gravity="start"
        android:id="@+id/toolbarToolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:contentInsetStart="0dp" style="@style/groupStyle">
        <LinearLayout android:gravity="start"
            android:id="@+id/linearRowarrowright"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_15pxv"
            android:layout_marginEnd="@dimen/_28pxh"
            android:layout_marginStart="@dimen/_15pxh"
            android:layout_marginTop="@dimen/_30pxv"
            android:layout_width="match_parent" android:orientation="horizontal">
            <ImageButton
                android:background="@drawable/rectangle_bg_white_a700_radius_15"
                android:id="@+id/btnArrowright"
                android:layout_height="@dimen/_30pxh"
                android:layout_width="@dimen/_30pxh"
                android:paddingHorizontal="@dimen/_7pxh"
                android:paddingVertical="@dimen/_7pxv"
                android:scaleType="fitCenter"
                android:src="@drawable/img_arrowright_gray_900" tools:ignore="ContentDescription"/>
            <TextView android:ellipsize="end"
                android:id="@+id/txtAboutUs"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_3pxv"
                android:layout_marginStart="@dimen/_19pxh"
                android:layout_marginTop="@dimen/_2pxv"
                android:layout_weight="0.73"
                android:layout_width="0dp" android:singleLine="true"
                android:text="Query"
                style="@style/txtRobotoromansemibold20"
                tools:text="Query"/>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>


    <TextView android:ellipsize="end"
        android:id="@+id/txtFrameFour"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/_15pxh"
        android:layout_marginEnd="@dimen/_10pxh"
        android:layout_width="wrap_content"
        android:paddingBottom="@dimen/_10pxv"
        android:paddingEnd="@dimen/_30pxh"
        android:paddingStart="@dimen/_30pxh"
        android:paddingTop="@dimen/_10pxv"
        android:singleLine="true"
        android:text="Write query"
        style="@style/txtGradientRounded"
        tools:text="write query"/>


    <TextView
        style="@style/txtNunitomedium161"
        android:layout_marginStart="@dimen/_15pxv"
        android:text="Recent queries"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="5dp"
        android:layout_marginStart="@dimen/_15pxh"
        android:layout_marginEnd="@dimen/_15pxh"
        android:id="@+id/recyclerviewForQuery"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>